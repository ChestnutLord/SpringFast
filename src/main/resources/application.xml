<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="java.lang.String" id="driver">
        <constructor-arg type="java.lang.String" value="postgresDrivew"/>
    </bean>

    <bean class="org.example.database.ConnectionPool"
          id="pool1"
          name="p1, p2, p3"
          init-method="init"
          destroy-method="destroy">

        <constructor-arg ref="driver"/>
        <constructor-arg value="10"/>
        <constructor-arg>
            <list>
                <value>--arg1=value1</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg>
            <map>
                <entry key="url" value-ref="driver"/>
                <entry key="password" value="1234"/>
            </map>
        </constructor-arg>

        <property name="properties">
            <map>
                <entry key="url" value-ref="driver"/>
                <entry key="password" value="1234"/>
            </map>
        </property>
    </bean>

    <bean class="org.example.repository.CompanyRepository" id="companyRepository"
          factory-method="companyRepositoryFactoryMethod">
        <constructor-arg ref="p1"/>
    </bean>

</beans>